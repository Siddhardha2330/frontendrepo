<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Dashboard - QuizPlatform</title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: Arial, sans-serif;
    }

    body {
      background-color: #f5f7fa;
    }

    /* Sidebar */
    .sidebar {
      position: fixed;
      top: 0;
      left: 0;
      width: 250px;
      height: 100%;
      background-color: #ffffff;
      box-shadow: 2px 0 5px rgba(0, 0, 0, 0.1);
      transition: left 0.3s ease-in-out;
    }

    .sidebar-hidden {
      left: -250px;
    }

    .sidebar .logo {
      display: flex;
      align-items: center;
      gap: 10px;
      padding: 20px;
      border-bottom: 1px solid #e5e7eb;
    }

    .sidebar .logo img {
      width: 30px;
      height: 30px;
    }

    .sidebar .logo h1 {
      font-size: 20px;
      font-weight: bold;
      color: #1f2937;
    }

    .sidebar nav {
      padding: 20px;
    }

    .sidebar nav a {
      display: flex;
      align-items: center;
      gap: 10px;
      padding: 10px;
      color: #4b5563;
      text-decoration: none;
      border-radius: 8px;
      margin-bottom: 5px;
    }

    .sidebar nav a.active {
      background-color: #f3e8ff;
      color: #6b46c1;
    }

    .sidebar nav a:hover {
      background-color: #f3f4f6;
    }

    .sidebar nav a img {
      width: 20px;
      height: 20px;
    }

    /* Header */
    header {
      background-color: #ffffff;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
      padding: 15px 20px;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    header .toggle-sidebar {
      display: none;
      background: none;
      border: none;
      cursor: pointer;
    }

    header .toggle-sidebar img {
      width: 24px;
      height: 24px;
    }

    header h2 {
      font-size: 18px;
      font-weight: 600;
      color: #1f2937;
    }

    header .user-info {
      display: flex;
      align-items: center;
      gap: 10px;
    }

    header .user-info span {
      color: #4b5563;
      font-size: 14px;
    }

    header .user-info button {
      background: none;
      border: none;
      color: #6b46c1;
      font-size: 14px;
      cursor: pointer;
    }

    header .user-info button:hover {
      text-decoration: underline;
    }

    /* Main Content */
    .main-content {
      margin-left: 250px;
      padding: 20px;
      transition: margin-left 0.3s ease-in-out;
    }

    /* Summary Cards */
    .summary-cards {
      display: flex;
      flex-wrap: wrap;
      gap: 10px;
      margin-bottom: 20px;
      margin-top: 20px;
    }

    .summary-card {
      background-color: #ffffff;
      border-radius: 8px;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
      padding: 20px;
      display: flex;
      align-items: center;
      gap: 15px;
      flex: 1;
      min-width: 200px;
    }

    .summary-card img {
      width: 32px;
      height: 32px;
    }

    .summary-card .text {
      flex: 1;
    }

    .summary-card p:first-child {
      color: #6b7280;
      font-size: 14px;
    }

    .summary-card p:last-child {
      color: #1f2937;
      font-size: 24px;
      font-weight: bold;
    }

    /* Quizzes Table */
    .quizzes-table {
      background-color: #ffffff;
      border-radius: 8px;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    .quizzes-table .header {
      padding: 15px 20px;
      display: flex;
      justify-content: space-between;
      align-items: center;
      border-bottom: 1px solid #e5e7eb;
    }

    .quizzes-table .header h3 {
      font-size: 18px;
      font-weight: 600;
      color: #1f2937;
    }

    .quizzes-table .header .actions {
      display: flex;
      gap: 10px;
    }

    .quizzes-table .header input {
      border: 1px solid #d1d5db;
      border-radius: 8px;
      padding: 8px 12px;
      font-size: 14px;
      width: 250px;
    }

    .quizzes-table .header button {
      background-color: #6b46c1;
      color: #ffffff;
      border: none;
      padding: 8px 16px;
      border-radius: 8px;
      cursor: pointer;
      font-size: 14px;
    }

    .quizzes-table .header button:hover {
      background-color: #5b35a6;
    }

    .quizzes-table table {
      width: 100%;
      border-collapse: collapse;
    }

    .quizzes-table th, .quizzes-table td {
      padding: 15px 20px;
      text-align: left;
      font-size: 14px;
    }

    .quizzes-table th {
      background-color: #f9fafb;
      color: #6b7280;
      font-weight: 500;
    }

    .quizzes-table td {
      color: #4b5563;
      border-bottom: 1px solid #e5e7eb;
    }

    .quizzes-table tr:hover {
      background-color: #f9fafb;
    }

    .quizzes-table td span.created {
      color: #9ca3af;
      font-size: 12px;
    }

    .quizzes-table .difficulty, .quizzes-table .status {
      display: inline-block;
      padding: 4px 8px;
      border-radius: 9999px;
      font-size: 12px;
    }

    .difficulty-easy { background-color: #d1fae5; color: #10b981; }
    .difficulty-medium { background-color: #fef3c7; color: #f59e0b; }
    .difficulty-hard { background-color: #fee2e2; color: #ef4444; }
    .status-published { background-color: #d1fae5; color: #10b981; }
    .status-draft { background-color: #fef3c7; color: #f59e0b; }

    .quizzes-table .actions {
      display: flex;
      gap: 10px;
    }

    .quizzes-table .actions button {
      background: none;
      border: none;
      cursor: pointer;
    }

    .quizzes-table .actions img {
      width: 20px;
      height: 20px;
    }

    .quizzes-table .actions button:hover img {
      filter: brightness(0.8);
    }

    .quizzes-table .actions .delete:hover img {
      filter: brightness(0.5) sepia(1) hue-rotate(-50deg) saturate(5);
    }

    /* Modal */
    .modal {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-color: rgba(0, 0, 0, 0.5);
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .modal.hidden {
      display: none;
    }

    .modal .modal-content {
      background-color: #ffffff;
      border-radius: 8px;
      padding: 20px;
      width: 100%;
      max-width: 400px;
    }

    .modal h3 {
      font-size: 18px;
      font-weight: 600;
      color: #1f2937;
      margin-bottom: 20px;
    }

    .modal form .form-group {
      margin-bottom: 15px;
    }

    .modal form label {
      display: block;
      font-size: 14px;
      color: #4b5563;
      margin-bottom: 5px;
    }

    .modal form input,
    .modal form select {
      width: 100%;
      border: 1px solid #d1d5db;
      border-radius: 8px;
      padding: 8px 12px;
      font-size: 14px;
    }

    .modal form .buttons {
      display: flex;
      gap: 10px;
    }

    .modal form button {
      padding: 8px 16px;
      border-radius: 8px;
      border: none;
      cursor: pointer;
      font-size: 14px;
    }

    .modal form .create-btn {
      background-color: #6b46c1;
      color: #ffffff;
    }

    .modal form .create-btn:hover {
      background-color: #5b35a6;
    }

    .modal form .cancel-btn {
      background-color: #e5e7eb;
      color: #4b5563;
    }

    .modal form .cancel-btn:hover {
      background-color: #d1d5db;
    }

    /* Responsive */
    @media (max-width: 768px) {
      .sidebar {
        left: -250px;
      }

      .sidebar-hidden {
        left: 0;
      }

      .main-content {
        margin-left: 0;
      }

      header .toggle-sidebar {
        display: block;
      }

      .quizzes-table {
        overflow-x: auto;
      }
    }
  </style>
