  <script>
    // Global variables
    var quizzes = [];
    var allQuizzes = []; // Keep original data for search

    // Function to decode JWT token and return payload
    function decodeToken(token) {
      try {
        // Decode the token (Base64 URL decoding)
        var base64Url = token.split('.')[1];
        var base64 = base64Url.replace(/-/g, '+').replace(/_/g, '/');
        var jsonPayload = decodeURIComponent(atob(base64).split('').map(function(c) {
          return '%' + ('00' + c.charCodeAt(0).toString(16)).slice(-2);
        }).join(''));
        return JSON.parse(jsonPayload);
      } catch (error) {
        return null;
      }
    }

    // Function to check if token is expired
    function isTokenExpired(token) {
      var decoded = decodeToken(token);
      if (!decoded) return true;
      var expiry = decoded.exp * 1000; // Convert to milliseconds
      var now = new Date().getTime();
      return now > expiry;
    }

    // Display username from token
    function displayUsername() {
      var token = localStorage.getItem('token');
      var decoded = decodeToken(token);
      if (decoded && decoded.username) {
        document.getElementById('usernameDisplay').innerText = decoded.username + ' (admin)';
      } else {
        document.getElementById('usernameDisplay').innerText = 'Admin User (admin)';
      }
    }

    // Check token before fetching quizzes
    function checkAuth() {
      var token = localStorage.getItem('token');
      if (!token) {
        alert('No authentication token found. Please login.');
        window.location.href = '/';
        return false;
      }
      if (isTokenExpired(token)) {
        alert('Your session has expired. Please login again.');
        localStorage.removeItem('token');
        window.location.href = '/';
        return false;
      }
      return true;
    }

    // Fetch quizzes from database
    async function fetchQuizzes() {
      if (!checkAuth()) return;

      try {
        const response = await fetch('/api/quizzes', {
          headers: {
            'Authorization': 'Bearer ' + localStorage.getItem('token')
          }
        });

        if (!response.ok) {
          throw new Error('Failed to fetch quizzes');
        }

        const result = await response.json();
        if (result.success) {
          quizzes = result.data;
          allQuizzes = [...result.data]; // Keep a copy for search
          updateDashboard();
        } else {
          console.error('Failed to fetch quizzes:', result.message);
        }
      } catch (error) {
        console.error('Error fetching quizzes:', error);
        document.getElementById('quizTableBody').innerHTML = '<tr><td colspan="9" style="text-align: center; color: #ef4444;">Failed to load quizzes. Please try again.</td></tr>';
      }
    }

    // Update dashboard stats and table
    function updateDashboard() {
      var totalQuizzes = quizzes.length;
      var publishedQuizzes = 0;
      var draftQuizzes = 0;
      var totalParticipants = 0;

      for (var i = 0; i < quizzes.length; i++) {
        if (quizzes[i].status === 'Published') {
          publishedQuizzes++;
        } else if (quizzes[i].status === 'Draft') {
          draftQuizzes++;
        }
        totalParticipants += (quizzes[i].participants || 0);
      }

      document.getElementById('totalQuizzes').textContent = totalQuizzes;
      document.getElementById('publishedQuizzes').textContent = publishedQuizzes;
      document.getElementById('draftQuizzes').textContent = draftQuizzes;
      document.getElementById('totalParticipants').textContent = totalParticipants;

      var tableBody = document.getElementById('quizTableBody');
      tableBody.innerHTML = '';
      
      if (quizzes.length === 0) {
        tableBody.innerHTML = '<tr><td colspan="9" style="text-align: center; color: #6b7280;">No quizzes found.</td></tr>';
        return;
      }

      for (var i = 0; i < quizzes.length; i++) {
        var quiz = quizzes[i];
        var row = document.createElement('tr');
        row.innerHTML = 
          '<td>' + quiz.title + '<br><span class="created">Created: ' + quiz.created + '</span></td>' +
          '<td>' + quiz.category + '</td>' +
          '<td><span class="difficulty difficulty-' + quiz.difficulty.toLowerCase() + '">' + quiz.difficulty + '</span></td>' +
          '<td>' + quiz.questions + '</td>' +
          '<td>' + quiz.duration + 'm</td>' +
          '<td>' + quiz.participants + '</td>' +
          '<td>' + quiz.avgScore + '%</td>' +
          '<td><span class="status status-' + quiz.status.toLowerCase() + '">' + quiz.status + '</span></td>' +
          '<td class="actions">' +
            '<button onclick="viewQuiz(\'' + quiz.id + '\')">' +
              '<img src="data:image/svg+xml,%3Csvg xmlns=\'http://www.w3.org/2000/svg\' viewBox=\'0 0 24 24\' fill=\'none\' stroke=\'%236b7280\'%3E%3Cpath stroke-linecap=\'round\' stroke-linejoin=\'round\' stroke-width=\'2\' d=\'M15 12a3 3 0 11-6 0 3 3 0 016 0z\'/%3E%3Cpath stroke-linecap=\'round\' stroke-linejoin=\'round\' stroke-width=\'2\' d=\'M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z\'/%3E%3C/svg%3E" alt="View">' +
            '</button>' +
            '<button onclick="editQuiz(\'' + quiz.id + '\')">' +
              '<img src="data:image/svg+xml,%3Csvg xmlns=\'http://www.w3.org/2000/svg\' viewBox=\'0 0 24 24\' fill=\'none\' stroke=\'%236b7280\'%3E%3Cpath stroke-linecap=\'round\' stroke-linejoin=\'round\' stroke-width=\'2\' d=\'M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z\'/%3E%3C/svg%3E" alt="Edit">' +
            '</button>' +
            '<button class="delete" onclick="deleteQuiz(\'' + quiz.id + '\')">' +
              '<img src="data:image/svg+xml,%3Csvg xmlns=\'http://www.w3.org/2000/svg\' viewBox=\'0 0 24 24\' fill=\'none\' stroke=\'%236b7280\'%3E%3Cpath stroke-linecap=\'round\' stroke-linejoin=\'round\' stroke-width=\'2\' d=\'M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5-4h4m-4 0a2 2 0 00-2 2h8a2 2 0 00-2-2m-4 0h4m-5 4v12m5-12v12\'/%3E%3C/svg%3E" alt="Delete">' +
            '</button>' +
          '</td>';
        tableBody.appendChild(row);
      }
    }

    // Search functionality
    document.getElementById('searchInput').oninput = function(e) {
      var searchTerm = e.target.value.toLowerCase();
      
      if (searchTerm === '') {
        // If search is empty, show all quizzes
        quizzes = [...allQuizzes];
      } else {
        // Filter quizzes based on search term
        quizzes = allQuizzes.filter(function(quiz) {
          return quiz.title.toLowerCase().indexOf(searchTerm) !== -1 ||
                 quiz.category.toLowerCase().indexOf(searchTerm) !== -1;
        });
      }
      
      updateDashboard();
    };

    // Quiz action functions
    function viewQuiz(quizId) {
      // Navigate to quiz view page
      window.location.href = '/admin/manageQuiz?quizId=' + quizId;
    }

    function editQuiz(quizId) {
      // Navigate to quiz edit page
      window.location.href = '/admin/manageQuiz?quizId=' + quizId + '&edit=true';
    }

    async function deleteQuiz(quizId) {
      if (!confirm('Are you sure you want to delete this quiz? This action cannot be undone.')) {
        return;
      }

      if (!checkAuth()) return;

      try {
        const response = await fetch('/api/quizzes/' + quizId, {
          method: 'DELETE',
          headers: {
            'Authorization': 'Bearer ' + localStorage.getItem('token')
          }
        });

        if (response.ok) {
          // Refresh the quiz list
          fetchQuizzes();
        } else {
