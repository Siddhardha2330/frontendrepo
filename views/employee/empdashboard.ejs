<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Employee Dashboard</title>
  <script src="/config.js"></script>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: Arial, sans-serif;
        }
        body {
            display: flex;
            min-height: 100vh;
            background-color: #f5f5f5;
        }
        .sidebar {
            width: 250px;
            background-color: #fff;
            padding: 20px;
            border-right: 1px solid #ddd;
        }
        .sidebar .logo {
            font-size: 24px;
            font-weight: bold;
            color: #6a5af9;
            margin-bottom: 30px;
        }
        .sidebar a {
            display: block;
            padding: 10px;
            color: #333;
            text-decoration: none;
            margin-bottom: 10px;
            border-radius: 5px;
            font-size: 1.08rem;
            transition: background 0.18s, color 0.18s, transform 0.18s;
        }
        .sidebar a.active {
            background-color: #6a5af9;
            color: #fff;
        }
        .sidebar a:hover {
            background-color: #ede9fe;
            color: #6a5af9;
            transform: translateX(4px) scale(1.04);
        }
        .main-content {
            flex: 1;
            padding: 20px;
        }
        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }
        .header .user {
            font-size: 16px;
            color: #333;
        }
        .header .logout {
            background: linear-gradient(90deg, #6b46c1 60%, #805ad5 100%);
            color: #fff;
            border: none;
            border-radius: 8px;
            padding: 8px 22px;
            font-size: 1.05rem;
            font-weight: 600;
            cursor: pointer;
            box-shadow: 0 2px 8px rgba(107,70,193,0.08);
            transition: background 0.2s, box-shadow 0.2s;
            text-decoration: none;
            margin-left: 18px;
        }
        .header .logout:hover {
            background: linear-gradient(90deg, #805ad5 60%, #6b46c1 100%);
            box-shadow: 0 4px 16px rgba(107,70,193,0.16);
            color: #fff;
            text-decoration: none;
        }
        .quiz-section {
            margin-bottom: 30px;
        }
        .quiz-section h2 {
            font-size: 24px;
            margin-bottom: 10px;
        }
        .quiz-section p {
            color: #666;
            margin-bottom: 20px;
        }
        .stats {
            display: flex;
            gap: 20px;
            margin-bottom: 20px;
        }
        .stat-box {
            background-color: #fff;
            padding: 15px;
            border-radius: 10px;
            flex: 1;
            text-align: center;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }
        .stat-box h3 {
            font-size: 28px;
            color: #333;
        }
        .stat-box p {
            color: #666;
            font-size: 14px;
        }
        .quiz-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 20px;
        }
        .quiz-card {
            background-color: #fff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            transition: box-shadow 0.18s, transform 0.18s;
        }
        .quiz-card:hover {
            box-shadow: 0 6px 18px rgba(107,70,193,0.18);
            transform: translateY(-4px) scale(1.03);
        }
        .quiz-card h3 {
            font-size: 18px;
            margin-bottom: 10px;
        }
        .quiz-card p {
            color: #666;
            font-size: 14px;
            margin-bottom: 10px;
        }
        .quiz-card .difficulty {
            display: inline-block;
            padding: 5px 10px;
            border-radius: 15px;
            font-size: 12px;
            margin-bottom: 10px;
        }
        .beginner {
            background-color: #e6f4ea;
            color: #2e7d32;
        }
        .intermediate {
            background-color: #fff3e0;
            color: #f57c00;
        }
        .advanced {
            background-color: #ffebee;
            color: #d32f2f;
        }
        .quiz-card .details {
            display: flex;
            gap: 15px;
            margin-bottom: 15px;
            font-size: 14px;
            color: #666;
        }
        .quiz-card .rating {
            display: flex;
            align-items: center;
            gap: 5px;
            margin-bottom: 15px;
        }
        .quiz-card .rating span {
            color: #ffb300;
            font-size: 16px;
        }
        .quiz-card button {
            width: 100%;
            padding: 10px;
            background-color: #6a5af9;
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }
        .quiz-card .category {
            display: inline-block;
            padding: 5px 10px;
            background-color: #f5f5f5;
            border-radius: 15px;
            font-size: 12px;
            color: #666;
        }
        .attempt-btn {
            display: block;
            width: 100%;
            background: linear-gradient(90deg, #6b46c1 60%, #805ad5 100%);
            color: #fff;
            border: none;
            border-radius: 8px;
            padding: 10px 0;
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            box-shadow: 0 2px 8px rgba(107,70,193,0.08);
            transition: background 0.2s, box-shadow 0.2s;
            text-align: center;
            text-decoration: none;
            margin-top: 10px;
        }
        .attempt-btn:hover {
            background: linear-gradient(90deg, #805ad5 60%, #6b46c1 100%);
            box-shadow: 0 4px 16px rgba(107,70,193,0.16);
            color: #fff;
            text-decoration: none;
        }
    </style>
</head>
<body>
    <div class="sidebar">
        <div class="logo">QuizPlatform</div>
        <a href="#" class="active">üè† Dashboard</a>
        <a href="/employee/availableQuizzes">üìù Available Quizzes</a>
        <a href="/employee/mySubmissions">üìÑ My Submissions</a>
        <a href="/employee/leaderboard">üèÜ Leaderboard</a>
        <a href="/employee/profile">üë§ Profile</a>
    </div>
    <div class="main-content">
        <div class="header">
            <div></div>
            <div class="user">
                <% if (typeof user !== 'undefined' && user && user.name) { %>
                    <%= user.name %>
                <% } else { %>
                    Employee
                <% } %> (employee) <a href="#" class="logout" onclick="logout()">Logout</a>
            </div>
        </div>
        <div class="quiz-section">
            <h2>Available Quizzes</h2>
            <p>Discover and take quizzes to test your knowledge</p>
            <div class="stats" id="statsSection"></div>
            <div class="quiz-grid" id="quizGrid"></div>
        </div>
    </div>

   

    <script>
        function logout() {
            localStorage.removeItem('token');
            window.location.href = '/';
        }

        // Fetch and render stats
        async function loadStats() {
          try {
            const res = await fetch(config.getApiUrl('/api/quizzes/employee-stats', {
              headers: config.getAuthHeaders()
            });
            if (!res.ok) throw new Error('Failed to fetch stats');
            const stats = await res.json();
            const s = stats.data || {};
            document.getElementById('statsSection').innerHTML = `
              <div class="stat-box">
                <h3>${s.totalQuizzes ?? 0}</h3>
                <p>Total Quizzes</p>
              </div>
              <div class="stat-box">
                <h3>${s.totalParticipants ?? 0}</h3>
                <p>Total Participants</p>
              </div>
              <div class="stat-box">
                <h3>${s.avgDuration ?? 0}m</h3>
                <p>Avg Duration</p>
              </div>
              <div class="stat-box">
                <h3>${s.avgRating ?? 0}</h3>
                <p>Avg Rating</p>
              </div>
            `;
          } catch (err) {
            document.getElementById('statsSection').innerHTML = '<p style="color:#ef4444;">Could not load stats.</p>';
          }
        }

        // Fetch and render available quizzes
        async function loadAvailableQuizzes() {
          try {
            const res = await fetch(config.getApiUrl('/api/quizzes/available', {
              headers: config.getAuthHeaders()
            });
            if (!res.ok) throw new Error('Failed to fetch quizzes');
            const result = await res.json();
            const quizzes = result.data || [];
            const grid = document.getElementById('quizGrid');
            grid.innerHTML = '';
            if (!quizzes.length) {
              grid.innerHTML = '<p>No quizzes available at the moment.</p>';
              return;
            }
            quizzes.forEach(quiz => {
              const card = document.createElement('div');
              card.className = 'quiz-card';
              card.innerHTML = `
                <h3>${quiz.title || 'Untitled Quiz'}</h3>
                <p>${quiz.description || 'No description available.'}</p>
                <span class="difficulty ${quiz.difficulty ? quiz.difficulty.toLowerCase() : 'beginner'}">
                  ${quiz.difficulty || 'Beginner'}
                </span>
                <div class="details">
                  <span>${quiz.duration !== undefined ? quiz.duration : 0} min</span>
                  <span>${quiz.questions !== undefined ? quiz.questions : 0} questions</span>
                  <span>${quiz.taken !== undefined ? quiz.taken : 0} taken</span>
                </div>
                <div class="rating">
                  <span>‚òÖ</span> ${quiz.rating !== undefined ? quiz.rating : 0}
                </div>
                <span class="category">${quiz.category || 'General'}</span>
                <a href="/employee/attempt/${quiz.id}" class="attempt-btn">Attempt Quiz</a>
              `;
              grid.appendChild(card);
            });
          } catch (err) {
            document.getElementById('quizGrid').innerHTML = '<p style="color:#ef4444;">Could not load quizzes.</p>';
          }
        }

        // On page load
        document.addEventListener('DOMContentLoaded', function() {
          loadStats();
          loadAvailableQuizzes();
        });
    </script>
</body>
</html>