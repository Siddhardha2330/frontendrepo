<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>My Submissions</title>
  <script src="/config.js"></script>
  <style>
    body {
      background: linear-gradient(120deg, #f5f7fa 0%, #e9e4f0 100%);
      font-family: 'Segoe UI', Arial, sans-serif;
      margin: 0;
      padding: 0;
      min-height: 100vh;
    }
    .container {
      max-width: 900px;
      margin: 48px auto;
      background: #fff;
      border-radius: 18px;
      box-shadow: 0 8px 32px rgba(107,70,193,0.10);
      padding: 36px 28px 32px 28px;
    }
    h1 {
      text-align: center;
      color: #6b46c1;
      margin-bottom: 32px;
      font-size: 2.2rem;
      font-weight: 800;
      letter-spacing: 1px;
    }
    table {
      width: 100%;
      border-collapse: collapse;
      background: #f9fafb;
      border-radius: 12px;
      overflow: hidden;
      box-shadow: 0 2px 8px #e9e4f0;
    }
    th, td {
      padding: 14px 12px;
      text-align: left;
      font-size: 1.05rem;
    }
    th {
      background: #ede9fe;
      color: #6b46c1;
      font-weight: 700;
    }
    tr:nth-child(even) { background: #f3f4f6; }
    tr:hover { background: #e9e4f0; }
    .no-submissions {
      color: #ef4444;
      text-align: center;
      margin-top: 28px;
      font-size: 1.1rem;
    }
    .back-btn {
      display: inline-block;
      margin-bottom: 24px;
      background: linear-gradient(90deg, #6b46c1 60%, #805ad5 100%);
      color: #fff;
      border: none;
      border-radius: 8px;
      padding: 10px 28px;
      font-size: 1.08rem;
      font-weight: 600;
      cursor: pointer;
      box-shadow: 0 2px 8px rgba(107,70,193,0.08);
      transition: background 0.2s, box-shadow 0.2s;
      text-decoration: none;
    }
    .back-btn:hover {
      background: linear-gradient(90deg, #805ad5 60%, #6b46c1 100%);
      box-shadow: 0 4px 16px rgba(107,70,193,0.16);
      color: #fff;
      text-decoration: none;
    }
    @media (max-width: 700px) {
      .container { padding: 10px 2vw; }
      th, td { padding: 10px 4px; font-size: 0.98rem; }
      h1 { font-size: 1.3rem; }
    }
  </style>
</head>
<body>
  <div class="container">
    <a href="/employee/dashboard" class="back-btn">&larr; Back to Dashboard</a>
    <h1>My Submissions</h1>
    <table id="mySubmissionsTable">
      <thead>
        <tr>
          <th>Quiz Title</th>
          <th>Score</th>
          <th>Submitted At</th>
        </tr>
      </thead>
      <tbody id="mySubmissionsBody">
        <!-- Submissions will be injected here -->
      </tbody>
    </table>
    <div id="noSubmissionsMsg" class="no-submissions" style="display:none;">No submissions yet.</div>
  </div>
  <script>
    async function loadMySubmissions() {
      try {
        const token = localStorage.getItem('token');
        console.log('Token from localStorage:', token);
        const authHeader = 'Bearer ' + token;
        console.log('Authorization header:', authHeader);
        const res = await fetch(config.getApiUrl('/api/quizzes/my-submissions', {
          headers: { 'Authorization': authHeader }
        });
        if (!res.ok) throw new Error('Failed to fetch submissions');
        const result = await res.json();
        const submissions = result.data || [];
        const tbody = document.getElementById('mySubmissionsBody');
        const noMsg = document.getElementById('noSubmissionsMsg');
        tbody.innerHTML = '';
        if (!submissions.length) {
          noMsg.style.display = 'block';
          return;
        }
        noMsg.style.display = 'none';
        submissions.forEach(sub => {
          const tr = document.createElement('tr');
          tr.innerHTML = `
            <td>${sub.quiz_title}</td>
            <td>${sub.score}</td>
            <td>${new Date(sub.submitted_at).toLocaleString()}</td>
          `;
          tbody.appendChild(tr);
        });
      } catch (err) {
        document.getElementById('noSubmissionsMsg').textContent = 'Could not load submissions.';
        document.getElementById('noSubmissionsMsg').style.display = 'block';
      }
    }
    document.addEventListener('DOMContentLoaded', function() {
      loadMySubmissions();
    });
  </script>
</body>
</html> 